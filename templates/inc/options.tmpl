[% USE CGI %]
[% CGI.start_form('-method' => 'get')%]
<table class = "options">
<tr>
<td>Tuning: </td>
<td>
[% CGI.popup_menu ( 
    '-name'     => 'tuning',
    '-values'   => harp.tunings_available,
    '-default'  => harp.tuning,
    '-class'    => 'dropdown',
    '-id'       => 'tunings_dropdown',
   )
%]
</tr>
<tr>
<td>Key: </td>
<td>
[% CGI.popup_menu ( 
                    '-name'    => 'key',
                    '-values'  => harp.keys_available,
                    '-default' => harp.key,
                    '-class'  => 'dropdown',
                    '-id'       => 'keys_dropdown',
   )
%]
</td>
</tr>
<tr>
<td>Position: </td>
<td>      
[% CGI.popup_menu ( 
                    '-name'    => 'position',
                    '-values'  => harp.positions_available,
                    '-default' => harp.position,
                    '-class'  => 'dropdown',
   )
%]
</td>
</tr>
<tr>
<td>
[% CGI.checkbox (
        '-name'     => 'include_bends',
        '-checked'    => harp.include_bends,
        '-value'    => 1,
        '-label'    => 'Include bends',
        )
%]
</td>
</tr>
<tr>
<td>
[% CGI.checkbox (
    '-name'     => 'include_overbends',
    '-checked'    => harp.include_overbends,
    '-value'    => 1,
    '-label'    => 'Include Overbends',
    )
%]
</td>
</tr>
<tr>
<td>
[% CGI.checkbox (
    '-name'     => 'include_unnecessary_overbends',
    '-checked'    => harp.include_unnecessary_overbends,
    '-value'    => 1,
    '-label'    => 'Include Unnecessary Overbends',
    )
%]
</td>
</tr>
<tr>
<td>
[% CGI.checkbox (
    '-name'     => 'show_notes',
    '-checked'    => harp.show_notes,
    '-value'    => 1,
    '-label'    => 'show notes',
    )
%]
</td>
</tr>
<tr>
<td>
[% CGI.checkbox (
    '-name'     => 'show_intervals',
    '-checked'    => harp.show_intervals,
    '-value'    => 1,
    '-label'    => 'show intervals',
    )
%]
</td>
<tr>
<td>[% CGI.submit ('-name' => 'submit', '-value' => 'Go!')%]</td>
</tr>
</table>

</form>