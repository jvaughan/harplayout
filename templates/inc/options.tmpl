[% USE CGI %]
[% CGI.start_form('-method' => 'get')%]
<table class = "options">
<tr>
    <td>Tuning: </td>
    <td>[% CGI.popup_menu ( 
        '-name'     => 'tuning',
        '-values'   => harp.tunings_available,
        '-default'  => harp.tuning,
        '-class'    => 'dropdown',
        '-id'       => 'tunings_dropdown',
        )
        %]
    </td>
    <td>&nbsp;</td>
</tr>
<tr>
    <td>Harp Key: </td>
    <td>[% INCLUDE 'inc/dropdown.tmpl'
                    name    = 'key'
                    values  = harp.keys_available
                    default = harp.key
        %]
    </td>
    <td><input type="radio" name="calculate" value="key" [% IF calculate == 'key' %]checked[% END %]></td>
</tr>
<tr>
    <td>Position: </td>
    <td>[% INCLUDE 'inc/dropdown.tmpl'
                name    = 'position'
                values  = harp.positions_available
                default = harp.position
        %]
    </td>
    <td><input type="radio" name="calculate" value="position" [% IF calculate == 'position' %]checked[% END %]></td>
</tr>
<tr>
    <td>Song Key</td>
    <td>[% INCLUDE 'inc/dropdown.tmpl'
            name    = 'position_key'
            values  = harp.keys_available
            default = harp.position_key
        %]
    </td>
    <td><input type="radio" name="calculate" value="position_key" [% IF calculate == 'position_key' %]checked[% END %]></td>
</tr>
<tr>
<td>
[% CGI.checkbox (
        '-name'     => 'include_bends',
        '-checked'    => harp.include_bends,
        '-value'    => 1,
        '-label'    => 'Include bends',
        )
%]
</td>
</tr>
<tr>
<td>
[% CGI.checkbox (
    '-name'     => 'include_overbends',
    '-checked'    => harp.include_overbends,
    '-value'    => 1,
    '-label'    => 'Include Overbends',
    )
%]
</td>
</tr>
<tr>
<td>
[% CGI.checkbox (
    '-name'     => 'include_unnecessary_overbends',
    '-checked'    => harp.include_unnecessary_overbends,
    '-value'    => 1,
    '-label'    => 'Include Unnecessary Overbends',
    )
%]
</td>
</tr>
<tr>
<td>
[% CGI.checkbox (
    '-name'     => 'show_notes',
    '-checked'    => harp.show_notes,
    '-value'    => 1,
    '-label'    => 'show notes',
    )
%]
</td>
</tr>
<tr>
<td>
[% CGI.checkbox (
    '-name'     => 'show_intervals',
    '-checked'    => harp.show_intervals,
    '-value'    => 1,
    '-label'    => 'show intervals',
    )
%]
</td>
<tr>
<td>[% CGI.submit ('-name' => 'submit', '-value' => 'Go!')%]</td>
</tr>
</table>

</form>